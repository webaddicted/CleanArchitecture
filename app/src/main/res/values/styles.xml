<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="Separator_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_CDCDCD</item>
    </style>
    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorControlNormal">@color/red</item>
    </style>

    <!--{START BLACK TEXT STYLE}-->
    <style name="txt_black_bold">
        <item name="android:textAppearance">@style/TextAppearance_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_black_medium">
        <item name="android:textAppearance">@style/TextAppearance_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="txt_black_light">
        <item name="android:textAppearance">@style/TextAppearance_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="txt_black_regular">
        <item name="android:textAppearance">@style/TextAppearance_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--{END BLACK TEXT STYLE}-->
    <!--{START WHITE TEXT STYLE}-->
    <style name="txt_white_regular" parent="txt_black_regular">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txt_white_light" parent="txt_black_light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txt_white_bold" parent="txt_black_bold">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txt_white_medium" parent="txt_black_medium">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--{END WHITE TEXT STYLE}-->
    <!--{START GRAY TEXT STYLE}-->
    <style name="txt_gray_regular" parent="txt_black_regular">
        <item name="android:textColor">@color/gray_BABABA</item>
    </style>

    <style name="txt_gray_light" parent="txt_black_light">
        <item name="android:textColor">@color/gray_BABABA</item>
    </style>

    <style name="txt_gray_bold" parent="txt_black_bold">
        <item name="android:textColor">@color/gray_BABABA</item>
    </style>

    <style name="txt_gray_medium" parent="txt_black_medium">
        <item name="android:textColor">@color/gray_BABABA</item>
    </style>
    <!--{END GRAY TEXT STYLE}-->
    <!--{START APP COLOR TEXT STYLE}-->
    <style name="txt_app_color_regular" parent="txt_black_regular">
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="txt_app_color_light" parent="txt_black_light">
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="txt_app_color_bold" parent="txt_black_bold">
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="txt_app_color_medium" parent="txt_black_medium">
        <item name="android:textColor">@color/app_color</item>
    </style>
    <!--{END APP COLOR TEXT STYLE}-->
    <!--{START PARENT ZILLA SLAB STYLE}-->
    <style name="TextAppearance_medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/zillaslab_medium</item>
    </style>

    <style name="TextAppearance_regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/zillaslab_regular</item>
    </style>

    <style name="TextAppearance_bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/zillaslab_bold</item>
    </style>

    <style name="TextAppearance_light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/zillaslab_light</item>
    </style>
    <!--    {END PARENT ZILLA SLAB STYLE}-->
</resources>
